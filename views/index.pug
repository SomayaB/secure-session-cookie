html
  body
    if first_name
      h1 Welcome back #{first_name} #{last_name} 
      p I bet your favorite color is #{favorite_color}!
    else
      h1 Welcome, stranger! Tell us about yourself.
      form(method="POST" action="/")
        .input
          input(name="first_name" placeholder="Your first name") 
        .input
          input(name="last_name" placeholder="Your last name")  
        .input
          input(name="favorite_color" placeholder="Your favorite color")   
        .input
          input(type="submit" value="That's me!")  
